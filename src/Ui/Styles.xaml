<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <Styles.Resources>
        <SolidColorBrush x:Key="Error">DarkRed</SolidColorBrush>
    </Styles.Resources>
    
    <Style Selector="TextBlock.error">
        <Setter Property="Foreground" Value="{DynamicResource Error}"></Setter>
    </Style>
</Styles>