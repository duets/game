{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "city": {
      "type": "object",
      "required": ["id", "name", "population", "places"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "population": { "type": "number" },
        "places": {
          "type": "array",
          "items": {
            "$ref": "place.json#definitions/place"
          }
        }
      }
    }
  },
  "allOf": [{ "$ref": "#/definitions/city" }]
}
