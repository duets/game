{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "root.json",
  "title": "Database",
  "description": "Root of the database",
  "type": "object",
  "required": ["countries", "genres", "instruments", "skills", "objects"],
  "properties": {
    "countries": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "country.json#definitions/country" },
          { "$ref": "file.json#definitions/file" }
        ]
      }
    },
    "genres": {
      "$ref": "file.json#definitions/file"
    },
    "instruments": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "instrument.json#definitions/instrument" },
          { "$ref": "file.json#definitions/file" }
        ]
      }
    },
    "skills": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "skill.json#definitions/skill" },
          { "$ref": "file.json#definitions/file" }
        ]
      }
    },
    "objects": {
      "type": "array",
      "items": {
        "oneOf": [
          { "$ref": "object.json#definitions/object" },
          { "$ref": "file.json#definitions/file" }
        ]
      }
    }
  }
}
