{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "place": {
      "type": "object",
      "required": ["id", "name", "type", "rooms"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "type": {
          "type": "string",
          "enum": ["house"]
        },
        "rooms": {
          "type": "array",
          "items": {
            "$ref": "room.json#definitions/room"
          }
        }
      }
    }
  },
  "allOf": [{ "$ref": "#/definitions/place" }]
}
