{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "object": {
      "type": "object",
      "required": ["id", "name", "description", "type"],
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "description": { "type": "string" },
        "type": {
          "oneOf": [
            // Complex types that require properties.
            {
              "type": "object",
              "required": ["Instrument"],
              "properties": {
                "Instrument": {
                  "$ref": "reference.json#definitions/reference"
                }
              }
            },
            // Simple types that don't require any property.
            {
              "type": "string",
              "enum": ["Bed", "Computer"]
            }
          ]
        }
      }
    }
  },
  "allOf": [{ "$ref": "#/definitions/object" }]
}
